# Example Configuration File
# Copy this to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///./data/cache.db
GRAPH_DB_HOST=localhost
GRAPH_DB_PORT=7687
GRAPH_DB_DATABASE=knowledge
GRAPH_DB_USERNAME=neo4j
GRAPH_DB_PASSWORD=your-secure-password

# Nebula Graph Configuration (if using)
NEBULA_USER=root
NEBULA_PASSWORD=your-nebula-password
NEBULA_ADDRESS=localhost:9669

# Application Configuration
LOG_LEVEL=INFO
CACHE_ENABLED=true
CACHE_LOCATION=./data/cache/

# Optional: Custom model settings
DEFAULT_MODEL=gpt-3.5-turbo
MODEL_TEMPERATURE=0.2

# Security Settings
MAX_CONNECTIONS=10
TIMEOUT_SECONDS=30 